#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

BUILD=$(find . -name jboss-fuse-full-6.1.0* | sed 's/.*jboss-fuse-full-6.1.0.\(.*\).zip/\1/')

case "$1" in
  -v|--version)
    version="$2"
esac
echo "$version" > "$OPENSHIFT_FUSE_DIR/env/OPENSHIFT_FUSE_VERSION"

#Download and extract the Fuse Fabric Distribution
mkdir -p $OPENSHIFT_FUSE_DIR
cd $OPENSHIFT_FUSE_DIR

unzip jboss-fuse-full-6.1.0.${BUILD}.zip
ln -s jboss-fuse-6.1.0.${BUILD} container


