#!/bin/bash
source $OPENSHIFT_CARTRIDGE_SDK_BASH

FUSE_BIN_DIR=${OPENSHIFT_FUSE_DIR}/container/bin
FUSE_PID_FILE=${OPENSHIFT_FUSE_DIR}/container/instances/instance.properties

function start() {
    ${FUSE_BIN_DIR}/start
    client_result "Starting FUSE cart: ${FUSE_BIN_DIR}/start"
}

function stop() {
    ${FUSE_BIN_DIR}/stop
    client_result "Stopping FUSE cart: ${FUSE_BIN_DIR}/stop"
}

function restart() {
    client_result "Restarting FUSE cart"
    stop
    start
}

function status() {
   PID=`cat $FUSE_PID_FILE | grep "item.0.pid" | awk -F "=" '{print $2}'`
   if [ "$PID" = "" ]; then
      client_result "Application is running"
   else
      client_result "Application is either stopped or inaccessible"
   fi
}

function reload() {
    client_result "Reloading FUSE cart"
    restart
}

function tidy() {
  client_message "Emptying log dir: $OPENSHIFT_FUSE_LOG_DIR"
  shopt -s dotglob
  rm -rf $OPENSHIFT_FUSE_LOG_DIR/*
}

case "$1" in
  start)     start ;;
  stop)      stop ;;
  restart)   restart ;;
  status)    status ;;
  reload)    reload ;;
  tidy)      tidy ;;
  *)         exit 0
esac
